<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@color/azure"

        >




<TextView
        android:text="@string/tittle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#3a3a3a"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:background="#c62339ff"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="left"
                >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nombre:"
                android:id="@+id/textView"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="left"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Apellido:"
                android:id="@+id/textView3"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="left"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="IdentificaciÃ³n:"
                android:id="@+id/textView2"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:inputType="textPersonName"
                android:ems="50"
                android:id="@+id/nombre" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:inputType="textPersonName"
                android:ems="50"
                android:id="@+id/apellido" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:inputType="number"
                android:ems="50"
                android:id="@+id/identifi"

                />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Genero:"
            android:id="@+id/gen"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        >



        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Hombre"
                android:textSize="18sp"
                android:onClick="selechombre"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Mujer"
                android:textSize="18sp"
                android:onClick="selecmujer"
                />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fecha de Nacimiento:"
            android:id="@+id/fechas"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <DatePicker
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fecha"
            android:layout_gravity="bottom"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"



            />

    </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lugar de Nacimiento:"
            android:id="@+id/lugar"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/ciudades"
        android:contentDescription="Ciudad"

        />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="left"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hobbies:"
            android:id="@+id/hob"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leer libros"
            android:id="@+id/checkBox1"
            android:textSize="18sp"

            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juegar videojuegos"
            android:id="@+id/checkBox2"
            android:textSize="18sp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aprender un nuevo idioma"
            android:id="@+id/checkBox3"
            android:textSize="18sp"
            />




        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tocar un instrumento musical"
            android:id="@+id/checkBox4"
            android:textSize="18sp"
            />




    </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listo"
                android:textSize="24sp"
                android:id="@+id/button"
                android:onClick="clickcalcular"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80pt"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/res"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="1"
                />

        </LinearLayout>



        </LinearLayout>

</ScrollView>
